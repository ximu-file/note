function MyGrep()
	let s:pattern = input ("find pattern: " , expand("<cword>"))
	let s:file_pattern = input ("find pattern in files: " , " --include=*.{cpp,java,h,Makefile,py,c}")
	cexpr system('grep -r -n ' .
				\ s:pattern .
				\ s:file_pattern .
				\ ' * ' )
endfunction

